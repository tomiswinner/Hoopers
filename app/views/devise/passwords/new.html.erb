<div class="row justify-content-center">
  <div class="col-12 filter-black text-white">
    <h4 class="py-3">パスワード再設定</h4>

    <%= form_with(model: @user, url: user_password_path, local: true, class: 'form-group') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="pb-3">
        <%= f.label(:email, 'メールアドレス') %><br>
        <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "form-control") %>
      </div>

      <div class="pb-3">
        <%= f.submit("メールを送信", class: 'btn btn-sm btn-success') %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>