<div class="row justify-content-center">
  <div class="col-12 filter-black justify-content-center text-white pt-3">
    <h4 class="pb-3">コート情報入力ページ</h4>
      <div class="pb-3">
        <p>
          コート名と地域、住所の入力は必須です。<br>
          その他わからない場所は空欄とすると、確認中と表示されます。
        </p>
          <%= form_with(model: @court, url: confirm_courts_path, method: 'get', local: true, id: 'form') do |f| %>
            <%= f.hidden_field(:user_id, value: current_user.id) %>
            <%= f.hidden_field(:latitude, value: true) %>
            <%= f.hidden_field(:longitude, value: true) %>
            <%= f.hidden_field(:business_status, value: true) %>
            <%= f.hidden_field(:confirmation_status, value: false) %>
            <%= hidden_field_tag(:prefecture_id, @prefecture.id, {form: 'form'}) %>

          <div class="pb-3">
            <div>
              <i class="fab fa-dribbble"></i> <%= f.label(:name, 'コート名') %>
            </div>
            <div>
              <%= f.text_field(:name, class: 'form-control') %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <%= f.label(:area_id, 'コート地区') %>
            </div>
            <div>
              <%= @prefecture.name %>
              <%= f.select(:area_id, @areas.pluck(:name,:id), {prompt: "地域を選択"},{class: 'form-select'}) %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="fas fa-image"></i> <%= f.label(:image, '画像') %>
            </div>
            <div>
              <%= f.attachment_field(:image, class: 'btn btn-sm text-white') %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="far fa-clock"></i> <%= f.label(:open_time, '営業開始時間') %>
            </div>
            <div>
              <%= f.time_select(:open_time, {include_blank: true, minute_step: 15}, class: 'form-select') %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="far fa-clock"></i> <%= f.label(:close_time, '営業終了時間') %>
            </div>
            <div>
              <%= f.time_select(:close_time, {include_blank: true, minute_step: 15}, class: 'form-select') %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="fas fa-comment-dots"></i> <%= f.label(:supplement, '営業時間補足') %>
            </div>
            <div>
              <%= f.text_area(:supplement, row: 5, class: 'form-control') %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="fas fa-map-marker-alt"></i> <%= f.label(:address, '住所') %>
            </div>
            <div>
              <%= f.text_field(:address, class: 'form-control') %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="fas fa-link"></i> <%= f.label(:url, 'HPリンク') %>
            </div>
            <div>
              <%= f.text_field(:url, class: 'form-control') %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="fas fa-ruler-combined"></i> <%= f.label(:size, 'リング数、コートサイズなど') %>
            </div>
            <div>
              <%= f.text_field(:size, class: 'form-control') %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="fas fa-yen-sign"></i> <%= f.label(:price, '利用料金') %>
            </div>
            <div>
              <%= f.text_field(:price, class: 'form-control') %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="fas fa-warehouse"></i> <%= f.label(:court_type, 'コートタイプ') %>
            </div>
            <div>
              <%= f.select(:court_type, Court.court_types_i18n.except(:checking).collect {|elem| [elem.last, elem.first]}, {prompt: "コートタイプを選択"}, {class: 'form-select'}) %>
            </div>
          </div>

          <div class="pb-3">
            <div>
              <i class="fas fa-tags"></i> タグ
            </div>
            <div>
              <%= collection_check_boxes(Tag, :tag_ids, Tag.all.collect, :id, :name, {}, {form: 'form'}) %>
            </div>
          </div>

          <div>
            <%= f.submit('入力内容を確認する', class: 'btn btn-sm btn-success') %>
          </div>
        <% end %>
  </div>
</div>