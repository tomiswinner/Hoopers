<div class="row bg-white d-flex flex-column">
  <div class="col-12  justify-content-center my-3 pb-3">
    <h2><%= @court.name %></h2>
  <div class="col-12  justify-content-center my-3 pb-3">
    <%= attachment_image_tag(@court, :image, fallback: "no_img.png", size: "250x250") %>
  </div>
  </div>
  <div class="col-12  justify-content-center mb-3">
  </div>
  <table class="col-10 mx-auto mb-3 table">
    <caption>
      <h3 class="font-weight-bold">コート基本情報</h3>
      <p class="small text-right">情報が違うと思ったら？</p>
    </caption>
    <tr>
      <td>
        <p class="small mb-1 font-weight-bold ">
          <i class="fas fa-map-marker-alt"></i> 住所
        </p>
        <span class="pl-3">
          <%= @court.address %>
        </span>
      </td>
    </tr>
    <tr>
      <td>
        <p class="small mb-1 font-weight-bold">
          <i class="far fa-clock"></i> 営業時間
        </p>
        <span class="pl-3">
          <%= @court.return_business_hour %>
        </span>
      </td>
    </tr>
    <tr>
      <td>
        <p class="small mb-1 font-weight-bold">
          <i class="fas fa-link"></i> リンク
        </p>
        <span class="pl-3">
          <%= @court.url %>
        </span>
      </td>
    </tr>
    <tr>
      <td>
        <p class="small mb-1 font-weight-bold">
          <i class="fas fa-yen-sign"></i> 料金
        </p>
        <span class="pl-3">
          <%= @court.price %>
        </span>
      </td>
    </tr>
    <tr>
      <td>
        <p class="small mb-1 font-weight-bold">
          <i class="fas fa-tags"></i> タグ
        </p>
        <div>
          <% Tag.pluck(:name).each do |tag_name| %>
            <div class="d-inline-block">
              <%= check_box_tag(tag_name, value= 1, checked= @court.has_tag?(tag_name), {readonly: true}) %>
              <%= label_tag(tag_name) %>
            </div>
          <% end %>
        </div>

      </td>
    </tr>
  </table>
  <div class="col-12  justify-content-center">
    <p class="font-weight-bold">
      <i class="fas fa-map-marked-alt"></i>　マップ情報
    </p>
    <div id="map" class="height-adjustment mb-3"></div>
  </div>
  <div class="col-12  justify-content-center">
    <h3 class="font-weight-bold">レビュー</h3>
    <p>総合レビュー点数</p>
    <div class="evaluation" id="eval_total_in_detail" data-score=<%= @court.ave_total_points_reviews %>></div>
    <p>アクセス</p>
    <div class="evaluation" id="eval_total_in_detail" data-score=<%= @court.ave_accessibility_reviews %>></div>
    <p>マナー</p>
    <div class="evaluation" id="eval_total_in_detail" data-score=<%= @court.ave_security_reviews %>></div>
    <p>設備</p>
    <div class="evaluation" id="eval_total_in_detail" data-score=<%= @court.ave_quality_reviews %>></div>
    <%= link_to('レビューの一覧を見る', court_court_reviews_path(@court.id), class: 'btn btn-sm d-block') %>
  </div>

</div>
<input type="hidden" id="lat" value="<%= @court.latitude %>">
<input type="hidden" id="lng" value="<%= @court.longitude %>">