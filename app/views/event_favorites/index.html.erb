<div class="row justify-content-center">
  <div class="col-12 filter-black justify-content-center">
    <div>イベント検討リスト</div>
    <% if @events.blank? %>
      <div>検討リストにイベントがありません</div>
    <% else %>
      <% @events.each do |event| %>
        <div class="row bg-success mb-2">
          <%= link_to(event.name, event_path(event.id)) %><br>
          <%= event.name %><br>
          <!--リファクタリング-->
          <%= link_to(event.court.name, detail_court_path(id: event.court.id)) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>