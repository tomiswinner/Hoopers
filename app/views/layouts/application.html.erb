<!DOCTYPE html>
<html>
  <head>
    <title>Hooper</title>
    <meta name="viewport" content="width=devise-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script async
    src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLEMAP_API_KEY'] %>&callback=noticeLoadCompletion">
    </script>
  </head>

  <body class="background-img">
    <header>
      <nav class="navbar bg-secondary navbar-dark navbar-expand-sm fixed-top">
        <a class="navbar-brand" href="/">Hoopers(fix)</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler1">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarToggler1">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to('つかいかた', root_path(anchor: 'how_to_use',), class: 'text-white') %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to('コート情報を提供', address_courts_path) %>
              </li>
              <li class="nav-item">
                <%= link_to('イベントを作成', address_events_path) %>
              </li>
              <li class="nav-item">
                <%= link_to('マイページ', mypage_users_path) %>
              </li>
              <li class="nav-item">
                <%= link_to('ログアウト', destroy_user_session_path, method: :delete) %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to('ログイン', new_user_session_path) %>
              </li>
              <li class="nav-item">
                <%= link_to('ユーザー登録', new_user_registration_path) %>
              </li>
            <% end %>
              <li class="nav-item">
                <%= link_to('問い合わせ', inqury_path) %>
              </li>
          </ul>
        </div>
      </nav>
    </header>
    <main class="fixed-padding mb-5 pb-5">
        <%= render(partial: "/layouts/err-msg") %>
      <div class="container">
        <%= yield %>
      </div>
    </main>
    <div class="height-adjustment"></div>
    <%= render(partial: 'layouts/footer', locals: {event: @event, court: @court}) %>
  </body>
</html>
