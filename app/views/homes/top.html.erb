<div class="row justify-content-center">
  <div class="col-12 filter-black justify-content-center py-5">
    <p class="text-white text-center">
      Hoopers!<br>
      バスケコート<br>
      バスケイベント<br>
      が探せるWEBサイト！
    </p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="card bg-transparent col-12">
    <div class="card-header bg-transparent w-100">
      <ul class="nav nav-tabs card-header-tabs w-100">
        <li class="nav-item">
          <a href="#court_card" class="nav-link bg-orange active" data-toggle="tab">コートを探す</a>
        </li>
        <li class="nav-item">
          <a href="#event_card" class="nav-link bg-lightblue" data-toggle="tab">イベントを探す</a>
        </li>
      </ul>
    </div>
    <div class="tab-content">
      <div class="tab-pane fade show active bg-orange justify-content-center rounded" id="court_card">
          <%= form_with(url: courts_path, method: 'get', local: true, class: 'form-group pt-4', id: 'keyword_form') do |f| %>
            <%= button_tag(type: 'submit', form: 'keyword_form', class: 'btn btn-sm') do %>
              <i class="fas fa-search"></i>　コート名から探す
            <% end %>
            <%= f.text_field(:keyword, placeholder: 'キーワードを入力') %>
          <% end %>
          <%= form_with(url: map_search_courts_path, local: true, method: 'get', id: 'location_form', class: 'form-group') do |f| %>
            <%= f.hidden_field(:latlng, {id: "latlng"}) %>
            <%= button_tag(type: 'submit', id: 'location_btn', form: 'location_form', class:'d-block m-auto') do %>
              <i class="fas fa-map-marker-alt"></i> 現在地から探す
            <% end %>
          <% end %>
          <%= form_with(model: Prefecture, url: courts_path, method: 'get', local: true, id: 'area_form', class: 'form-group pb-4 d-flex justify-content-center') do |f| %>
            <%= button_tag(type: 'submit', form: 'area_form', class: 'btn btn-sm') do %>
              <i class="fas fa-map-marked-alt"></i>　地域から探す
            <% end %>
            <%= f.select(:id, Prefecture.all.collect { |pref| [ pref.name, pref.id]}, {prompt: '地域を選択'}) %>
          <% end %>
      </div>



      <div class="tab-pane bg-lightblue fade show rounded " id="event_card">
        <div>
          <%= link_to('最新のイベントを表示する', events_path, class: 'btn btn-sm d-block pt-4') %>
        </div>
        <%= form_with(model: Event, url: events_path, method: 'get', local: true, class: 'form-group d-flex justify-content-center', id: 'time_form') do |f| %>
          <%= button_tag(form: 'time_form', class: 'btn btn-sm') do %>
            <i class="far fa-clock"></i>　時間で探す
          <% end %>
          <div class="d-flex flex-column">
            <%= f.date_field(:date, {class: 'form-select'}) %>
            <div class=>
              <%= f.time_select(:open_time, {use_month_numbers: true, include_blank: true, ignore_date: true, minute_step: 15}, {class: 'form-select'}) %> ～
              <%= f.time_select(:close_time, {use_month_numbers: true, include_blank: true, ignore_date: true, minute_step: 15}, {class: 'form-select'}) %>
            </div>
          </div>
        <% end %>
        <div>
          <%= link_to( 'お気に入りコートから探す', court_favorites_path, class: 'btn btn-sm d-block m-auto') %>
        </div>
        <%= link_to('コートからイベント情報を見るには？', root_path(anchor: 'court_card'), class: 'btn btn-sm d-block m-auto pb-3') %>
      </div>
    </div>
  </div>
</div>

<div class="row mt-2 d-flex justify-content-center">
  <div class="bg-secondary" style="height: 100px; width: 200px;">
    <%= link_to('コート情報募集中', address_courts_path) %>
  </div>
</div>
<div class="row mt-2 d-flex justify-content-center">
  <div class="bg-danger" id="how_to_use" style="height: 1000px; width: 200px;">
    つかいかた
  </div>
</div>