<div class="row bg-white justify-content-center">
  <div class="col-12  justify-content-center">
    <h2><%= @event.name %></h2>
    <div>
      <%= attachment_image_tag(@event, :image, fallback: "no_img.jpg", size: "250x250") %>
    </div>
  </div>
  <div class="col-12  justify-content-center">
    <h2>イベント基本情報</h2>
  </div>
  <div class="col-12  justify-content-center">
    <%= link_to(@event.court.name, detail_court_path(@event.court.id)) %>
    <p><%= @event.court.address %></p>
    <p><%= @event.open_time %></p>
    <p><%= @event.close_time %></p>
    <p id="contact"><%= @event.contact %></p>
    <p><%= @event.condition %></p>
    <p><%= @event.description %></p>
    <p><%= @event.created_at %></p>
  </div>
</div>