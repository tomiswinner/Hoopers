<div class="row justify-content-center">
  <div class="col-12 filter-black justify-content-center">
    <div class="py-3 d-flex">
      <div class="text-white align-text-bottom">イベント検索結果</div>
      <button class="btn btn-sm bg-success ml-auto text-white d-block" type="button" data-toggle="collapse" data-target="#search_bar">
        詳細検索
      </button>
    </div>

    <%= render(partial: 'layouts/narrow_search_bar', locals: {model: Event, path: events_path}) %>

    <% if @events.blank? %>
      <div>検索条件に一致するイベントがありません</div>
    <% else %>
      <% @events.each do |event| %>
        <div class="row bg-light mb-3">
          <div class="pl-3 py-3">
            <%= link_to(event_path(event.id)) do %>
              <%= attachment_image_tag(event, :image, fallback: "no_img.png", size: "75x75") %>
            <% end %>
          </div>
          <div class="pl-3 mt-3">
            <p class="text-center font-weight-bold align-middle mb-1">
              <%= link_to(event.name, event_path(event.id)) %><br>
            </p>
            <p class="mb-0">
              <i class="fas fa-map-marked-alt"></i>：<%= event.court.fetch_pref_name %>
            </p>
            <p class="mb-3">
              <i class="far fa-clock"></i>：<%= event.return_event_time %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="mt-3">
    <%= paginate(@events) %>
  </div>
</div>