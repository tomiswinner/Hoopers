        <%= link_to(court_histories_path, class: 'text-white') do %>
          <i class="fas fa-history"></i> コート閲覧履歴
        <% end %>
      </h4>
    </div>
    <div class="h-50px mb-3 d-flex pl-4 btn d-block btn-info">
      <h4 class="align-self-center mb-0">
        <%= link_to(edit_user_path(current_user.id), class: 'text-white') do %>
          <i class="fas fa-users-cog"></i> ユーザー情報編集
        <% end %>
      </h4>
    </div>
  </div>
</div>