<div class="row justify-content-center">
  <div class="col-12 bg-white justify-content-center">
    <div>ユーザー情報編集ページ</div>
    <%= form_with(model: @user, url: user_path, method: :patch, local: true) do |f| %>

    <div class="form-group row d-flex justify-content-start">
      <%= f.label :name, "ユーザー名", class: "col-form-label" %>
      <div class="form-inline">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row d-flex justify-content-start">
      <%= f.label :email, "メールアドレス", class: "col-form-label" %>
      <div class="">
      <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row d-flex justify-content-start">
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      <%= link_to("退会する", confirm_users_path, class: "btn btn-danger") %>
    </div>
  <% end %>

  </div>
</div>

